{
  "name": "@templ/node-qa",
  "version": "0.0.0",
  "description": "Node.js Quality Asurnace Module",
  "bin": {
    "node-qa": "bin/node-qa.js"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
