  "bugs": {
    "url": "https://github.com/templ-project/node-qa/issues"
  },
  "homepage": "https://github.com/templ-project/node-qa#readme",
  "dependencies": {
    "cosmiconfig": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.14.0",
    "globby": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "release-it": "^15.6.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
