{
  "files": [
    "./src/index.ts"
    //   "./src/action.ts"
  ],
  "compilerOptions": {
    "lib": ["ES2017", "DOM", "ES2018.asynciterable"],
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "removeComments": true,
    "verbatimModuleSyntax": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "tsconfig-paths",
        "afterTypeCheck": true
      }
    ]
  }
}
